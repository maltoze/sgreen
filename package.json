    "@types/react-dom": "^18.2.1",
    "@types/serviceworker": "^0.0.72",
    "@types/uuid": "^9.0.2",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
